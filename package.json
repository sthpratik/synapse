{
  "name": "synapse",
  "version": "1.0.0",
  "description": "Dynamic load testing tool using K6 with YAML configuration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "synapse": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs:serve": "docsify serve docs",
    "docs:init": "docsify init docs",
    "docs:version": "node scripts/update-docs-version.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build && npm run docs:version",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "load-testing",
    "k6",
    "performance",
    "cli",
    "yaml",
    "testing",
    "api-testing",
    "stress-testing",
    "benchmark"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/sthpratik"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sthpratik/synapse.git"
  },
  "bugs": {
    "url": "https://github.com/sthpratik/synapse/issues"
  },
  "homepage": "https://github.com/sthpratik/synapse#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0",
    "joi": "^17.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.24",
    "docsify-cli": "^4.4.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "preferGlobal": true
}
